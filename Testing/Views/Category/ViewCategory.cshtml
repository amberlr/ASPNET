@model Category

<h3>@Model.Name Information</h3>

<table class="table">
    <tr>
        <th>Category ID</th>
        <th>Name</th>
        <th>Department ID</th>
    </tr>
    <tr>
        <td>@Model.CategoryID</td>
        <td>@Model.Name</td>
        <td>@Model.DepartmentID</td>
    </tr>

</table>

<div style="display: block">
    <a href="/Category/UpdateCategory/@Model.CategoryID">Update this Category</a>
</div>

<div style="display: block">
    @using (Html.BeginForm("DeleteCategory", "Category", "Post"))
    {
        <input type="hidden" asp-for="CategoryID" value="@Model.CategoryID" />
        <input type="submit" onclick="return confirm('Are you sure?')" value="Delete this category" />
    }
</div>